<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">@null</item>
        <item name="actionBarWidgetTheme">@style/CryptooActionBar</item>
        <item name="actionBarStyle">@style/CryptooActionBar</item>
    </style>
    <style name="CryptooActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">@dimen/home_horizontal_padding</item>
        <item name="contentInsetEnd">@dimen/home_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_right_padding</item>
    </style>
</resources>
