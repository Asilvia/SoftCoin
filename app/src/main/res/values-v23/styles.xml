<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">@null</item>
        <item name="actionBarStyle">@style/CryptooActionBar</item>
        <item name="actionBarWidgetTheme">@style/CryptooActionBar</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:preferenceCategoryStyle">@style/CryptooPreferencesCategory</item>
        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>


    </style>
    <style name="CryptooActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="contentInsetStart">@dimen/home_horizontal_padding</item>
        <item name="contentInsetEnd">@dimen/home_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_right_padding</item>
        <item name="background">@drawable/actionbar_background</item>
        <item name="contentInsetStartWithNavigation">@dimen/empty</item>
    </style>

    <style name="CryptooPreferencesCategory" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/preferences_category</item>


    </style>





</resources>
