<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:columnCount="3"
    android:padding="@dimen/grid_margin"
    android:rowCount="2">

    <LinearLayout
        android:id="@+id/llFirst"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="0.7"
        android:background="@drawable/widget_top"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecond"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="0.7"
        android:background="@drawable/widget_top"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lalal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThird"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="0.7"
        android:background="@drawable/widget_top"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oooo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFirstrow"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="0.3"
        android:background="@drawable/widget_bottom"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ana" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecondrow"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="0.3"
        android:background="@drawable/widget_bottom"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lalal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThirdrow"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="0.3"
        android:background="@drawable/widget_bottom"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_margin"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oooo" />
    </LinearLayout>


</GridLayout>