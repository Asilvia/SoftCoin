            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/coin_user_profit_indicator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkuratproregular"
                android:gravity="left|center_vertical"
                android:text="ETH"
                android:layout_marginRight="@dimen/padding_xs"
                android:textColor="@color/title"
                android:textSize="@dimen/widget_title_text" />

            <ImageView
                android:id="@+id/coin_user_profit_indicator_icon2"
                android:layout_width="@dimen/widget_card_padding"
                android:layout_height="@dimen/widget_card_padding"
                android:src="@drawable/ic_arrow_drop_up" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThirdrow"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_margin="@dimen/grid_margin"
        android:layout_row="1"
        android:layout_rowWeight="0.3"
        android:background="@drawable/widget_bottom"
        android:orientation="vertical"
        android:padding="@dimen/widget_card_padding">

        <TextView
            android:id="@+id/coin_user_profit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akkuratprobold"
            android:gravity="left|center_vertical"
            android:text="ETH"

            android:textColor="@color/title"
            android:textSize="@dimen/widget_title_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/coin_user_profit_indicator3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkuratproregular"
                android:gravity="left|center_vertical"
                android:text="ETH"
                android:layout_marginRight="@dimen/padding_xs"
                android:layout_gravity="center_vertical"
                android:textColor="@color/title"
                android:textSize="@dimen/widget_title_text" />

            <ImageView
                android:id="@+id/coin_user_profit_indicator_icon3"
                android:layout_width="@dimen/widget_card_padding"
                android:layout_height="@dimen/widget_card_padding"
