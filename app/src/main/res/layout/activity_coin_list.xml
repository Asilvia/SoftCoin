<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.add.CoinListActivity">

<data>

    <import type="android.view.View" />

    <variable
        name="viewModel"
        type="com.android.asilvia.cryptoo.ui.add.CoinListViewModel" />

</data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingRight="@dimen/home_horizontal_padding"
    android:paddingLeft="@dimen/home_horizontal_padding"
   >
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/cards_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}"/>
    <android.support.v7.widget.CardView
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="11dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
       >
<!--
        <com.arlib.floatingsearchview.FloatingSearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:floatingSearch_searchHint="@string/hint_search"
            app:floatingSearch_suggestionsListAnimDuration="250"
            app:floatingSearch_showSearchKey="false"

            app:floatingSearch_leftActionMode="showSearch"
            app:floatingSearch_close_search_on_keyboard_dismiss="true"/>
-->
        <android.support.v7.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="@string/hint_search"
            app:defaultQueryHint="@string/hint_search"
            android:elevation="2dp"/>

    </android.support.v7.widget.CardView>
 <TextView
     android:id="@+id/lastsearched"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/search_layout"
     android:text="@string/frequently_searched"
     android:textColor="@color/light_grey"
     android:fontFamily="@font/akkuratproregular"
     android:textSize="@dimen/action_button"
     android:layout_marginLeft="11dp"
     />
    <ListView
        android:id="@+id/coinList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/lastsearched"
        android:layout_marginTop="11dp"
       />


</RelativeLayout>
</layout>