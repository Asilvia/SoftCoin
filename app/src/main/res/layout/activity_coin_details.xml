<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.details.CoinDetailsActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.android.asilvia.cryptoo.ui.details.CoinDetailsViewModel" />
    </data>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/activity_coin_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/home_horizontal_padding"
        android:paddingRight="@dimen/home_horizontal_padding">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/cards_background"
            />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/details_image"
            android:layout_height="@dimen/details_image"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/home_horizontal_padding"
            app:imageUrl="@{viewModel.getImageUrl()}" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginBottom="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cards_background"
                android:orientation="vertical"
                android:padding="@dimen/home_horizontal_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:fontFamily="@font/akkuratproregular"
                    android:gravity="left"
                    android:text="@string/total_amount"
                    android:textColor="@color/details_cards_text"
                    android:textSize="@dimen/cards_text" />

                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akkuratprobold"
                    android:gravity="left"
                    android:text="€ 0000"
                    android:textSize="@dimen/details_cards_value" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/cards_background" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true"
            android:layout_marginBottom="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cards_background"
            android:orientation="vertical"
            android:padding="@dimen/home_horizontal_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:fontFamily="@font/akkuratproregular"
                android:gravity="left"
                android:text="@string/price"
                android:textColor="@color/details_cards_text"
                android:textSize="@dimen/cards_text" />

            <TextView
                android:id="@+id/tvPriceNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkuratprobold"
                android:gravity="left"
                android:text="€ 0000"
                android:textSize="@dimen/details_cards_value" />
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cards_background"
                android:orientation="vertical"
                android:padding="@dimen/home_horizontal_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:fontFamily="@font/akkuratproregular"
                    android:gravity="left"
                    android:text="@string/index"
                    android:textColor="@color/details_cards_text"
                    android:textSize="@dimen/cards_text" />

                <TextView
                    android:id="@+id/tvIndex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akkuratprobold"
                    android:gravity="left"
                    android:text="€ 0000"
                    android:textSize="@dimen/details_cards_value" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/cards_background" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cards_background"
                android:orientation="vertical"
                android:padding="@dimen/home_horizontal_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:fontFamily="@font/akkuratproregular"
                    android:gravity="left"
                    android:text="@string/pieces"
                    android:textColor="@color/details_cards_text"
                    android:textSize="@dimen/cards_text" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akkuratprobold"
                    android:gravity="left"
                    android:text="€ 0000"
                    android:textSize="@dimen/details_cards_value" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cards_background"
                android:orientation="vertical"
                android:padding="@dimen/home_horizontal_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:fontFamily="@font/akkuratproregular"
                    android:gravity="left"
                    android:text="@string/initial_price"
                    android:textColor="@color/details_cards_text"
                    android:textSize="@dimen/cards_text" />

                <EditText
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akkuratprobold"
                    android:gravity="left"
                    android:text="€ 0000"
                    android:textSize="@dimen/details_cards_value" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/total_card"
            android:orientation="vertical"
            android:padding="@dimen/home_horizontal_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:fontFamily="@font/akkuratproregular"
                android:gravity="left"
                android:text="@string/profit_loss"
                android:textColor="@color/details_cards_text"
                android:textSize="@dimen/cards_text" />

            <TextView
                android:id="@+id/tvTotalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkuratprobold"
                android:gravity="left"
                android:text="€ 0000"
                android:textSize="@dimen/details_cards_value" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:background="@color/pink"
            android:text="@string/delete"
            android:fontFamily="@font/akkuratprobold"
            android:textSize="@dimen/action_button"
            />



    </LinearLayout>
    </ScrollView>
</layout>