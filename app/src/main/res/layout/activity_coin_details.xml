<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.details.CoinDetailsActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.android.asilvia.cryptoo.ui.details.CoinDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/activity_coin_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingLeft="@dimen/home_horizontal_padding"
            android:paddingRight="@dimen/home_horizontal_padding">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/cards_background" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/details_image"
                android:layout_height="@dimen/details_image"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/home_horizontal_padding"
                app:imageUrl="@{viewModel.getImageUrl()}" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cards_background"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/total_amount"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <TextView
                        android:id="@+id/tvPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratprobold"
                        android:gravity="left"
                        android:text="@{viewModel.getTotalAmount()}"
                        android:textColor="@color/title"
                        android:textSize="@dimen/details_cards_value" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/cards_background" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/padding_xxs"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cards_background"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/price"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <TextView
                        android:id="@+id/tvPriceNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratprobold"
                        android:gravity="left"
                        android:text="@{viewModel.getPrice()}"
                        android:textColor="@color/title"
                        android:textSize="@dimen/details_cards_value" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cards_background"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/index"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/akkuratprobold"
                            android:gravity="left"
                            android:text="@{viewModel.getIndex()}"
                            android:textColor="@color/title"
                            android:textSize="@dimen/details_cards_value" />

                        <ImageView
                            android:id="@+id/imIndexIndicator"
                            android:layout_width="42dp"
                            android:layout_height="24dp"
                            android:src="@{viewModel.getIndex()}" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/cards_background" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cards_background"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/pieces"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratprobold"
                        android:gravity="left"
                        android:text="@{viewModel.getAmount()}"
                        android:background="@android:color/transparent"
                        android:textColor="@color/title"
                        android:textSize="@dimen/details_cards_value"
                        android:drawableRight="@drawable/ic_edit_black" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cards_background"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/initial_price"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <EditText
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratprobold"
                        android:gravity="left"
                        android:text="@{viewModel.getInitialPrice()}"
                        android:background="@android:color/transparent"
                        android:textColor="@color/title"
                        android:textSize="@dimen/details_cards_value"
                    android:drawableRight="@drawable/ic_edit_black"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/total_card"
                    android:orientation="vertical"
                    android:padding="@dimen/details_card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratproregular"
                        android:gravity="left"
                        android:text="@string/profit_loss"
                        android:textColor="@color/details_cards_text"
                        android:textSize="@dimen/cards_text" />

                    <TextView
                        android:id="@+id/tvTotalValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akkuratprobold"
                        android:gravity="left"
                        android:text="@{viewModel.getProfit()}"
                        android:textColor="@color/title"
                        android:textSize="@dimen/details_cards_value" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTotalValueIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/akkuratproregular"
                            android:gravity="left"
                            android:text="@{viewModel.getProfitIndex()}"
                            android:textColor="@color/details_cards_text"
                            android:textSize="@dimen/cards_text" />

                        <ImageView
                            android:id="@+id/imTotalValueIndexIndicator"
                            android:layout_width="42dp"
                            android:layout_height="24dp"
                            android:src="@{viewModel.getProfitIndex()}" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/padding_xxl"
                android:layout_marginTop="@dimen/padding_xxl"
                android:background="@color/pink"
                android:fontFamily="@font/akkuratprobold"
                android:text="@string/delete"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/action_button" />

<ImageView
    android:layout_width="109dp"
    android:layout_height="23dp"
    android:src="@drawable/ic_logo_cryptoo"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/padding_xxl"/>
        </LinearLayout>
    </ScrollView>
</layout>