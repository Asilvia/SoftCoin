<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.asilvia.cryptoo.ui.start.StartActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.asilvia.cryptoo.ui.start.StartViewModel" />

    </data>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/main_value_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/empty"
                layout="@layout/start_empty_screen"
                app:empty="@{1}"
                android:visibility="@{viewModel.isEmpty ? View.VISIBLE : View.GONE}"/>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{viewModel.isEmpty ? View.GONE : View.VISIBLE}">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/home_horizontal_padding">

                        <ProgressBar
                            android:id="@+id/loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/home_horizontal_padding"
                            android:layout_marginLeft="@dimen/padding_s"
                            android:fontFamily="@font/akkuratproregular"
                            android:text="@string/my_currency"
                            android:textColor="@color/title"
                            android:textSize="@dimen/title" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/coins_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:background="@color/background"
                            android:nestedScrollingEnabled="false" />
                        <TextView
                            android:id="@+id/update_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/akkuratproregular"
                            android:layout_below="@+id/coins_list"
                            android:textSize="@dimen/update_text"
                            android:textColor="@color/light_grey"
                            android:paddingLeft="@dimen/padding_s"
                            android:paddingTop="@dimen/padding_medium"/>


                    </RelativeLayout>
                </android.support.v4.widget.NestedScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fab"
            app:layout_anchor="@id/add_new"
            app:layout_anchorGravity="center" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/home_horizontal_padding"
            android:src="@drawable/ic_add"
            app:backgroundTint="@android:color/transparent"
            app:borderWidth="@dimen/empty"
            app:elevation="0dp"
            app:fabSize="normal"
            app:layout_anchor="@id/main_value_content"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_marginRight="@dimen/home_horizontal_padding"/>


    </android.support.design.widget.CoordinatorLayout>


</layout>