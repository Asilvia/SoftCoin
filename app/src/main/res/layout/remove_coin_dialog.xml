<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_horizontal_padding"
    android:background="@color/light_blue">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_close_black_24dp"
        android:id="@+id/closeDialog" />

    <RelativeLayout
        android:id="@+id/image_container"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/closeDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/grey_circle">

        <ImageView
            android:id="@+id/removeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="5dp"

            />
    </RelativeLayout>
    <TextView
        android:id="@+id/empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_xxl"
        android:fontFamily="@font/akkuratprobold"
        android:text="@string/dialog_remove_title"
        android:textColor="@color/blue"
        android:textSize="42sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/empty_title"
        android:fontFamily="@font/akkuratprobold"
        android:text="@string/dialog_remove_body"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:textSize="19dp"
        />
    <ImageView
        android:layout_width="109dp"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_xxl"
        android:src="@drawable/ic_logo_cryptoo" />
</RelativeLayout>
