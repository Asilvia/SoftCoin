<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.asilvia.cryptoo">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CryptooApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.add.CoinListActivity"
            android:label="@string/add_currency">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.start.StartActivity" />
        </activity>
        <activity android:name=".ui.details.CoinDetailsActivity" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.start.StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.asilvia.cryptoo.ui.start.StartActivity" />
        </activity>
    </application>

</manifest>