<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asilvia.cryptoo">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.asilvia.cryptoo.CryptooApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.asilvia.cryptoo.ui.start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.asilvia.cryptoo.ui.add.AddCoinActivity"
            android:label="@string/add_currency">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asilvia.cryptoo.ui.start.StartActivity" />
        </activity>
        <activity
            android:name="com.asilvia.cryptoo.ui.details.CoinDetailsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.asilvia.cryptoo.ui.information.InformationActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.asilvia.cryptoo.ui.settings.SettingsActivity"
            android:label="@string/pref_title_settings"
            android:parentActivityName="com.asilvia.cryptoo.ui.start.StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.asilvia.cryptoo.ui.start.StartActivity" />
        </activity>

        <receiver android:name="com.asilvia.cryptoo.widget.CryptooWidget"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/cryptoo_widget_info" />
        </receiver>
        <service android:name="com.asilvia.cryptoo.widget.UpdateService" />
    </application>

</manifest>